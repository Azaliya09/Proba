<Page x:Class="Shop.Pages.AuthorizatePagexaml"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizatePagexaml">

    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Margin="15" HorizontalAlignment="Center">Авторизация</TextBlock>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Margin="15 0">Пароль: </TextBlock>
                <PasswordBox Width="200"></PasswordBox>
            </StackPanel>
            <Button x:Name="VhodBtn" Margin="10" Width="100" Click="VhodBtn_Click">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
