<Page x:Class="Shop.Pages.BasketPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BasketPage">

    <Grid>
        <ListView x:Name="EntriesPage">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Width="180" Header="Наименование товара" DisplayMemberBinding="{Binding Product.Title}"/>
                        <GridViewColumn Width="120" Header="Стоимость" DisplayMemberBinding="{Binding Product.Cost}"/>
                        <GridViewColumn Width="180" Header="Описание" DisplayMemberBinding="{Binding Product.Description}"/>
                        <GridViewColumn Width="120" Header="Скидка" DisplayMemberBinding="{Binding Product.Discount}"/>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
